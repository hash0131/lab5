@model IEnumerable<Lab5.Models.AnswerImage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Upload New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <p>There are no files to display.</p>
    }
    else
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        @(item.Question )
                    </td>

                    <td>
                        <img src="@item.Url" style="max-width: 400px;" />
                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@item.AnswerImageId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
